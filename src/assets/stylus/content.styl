@import 'jeet'

.overlay
    content ''
    position absolute
    display block
    top 0
    right 0
    left 0
    bottom 0
    background: rgba(25,98,127,0.3)

.recents-wrapper
    display flex
    justify-content: center
    margin-top 50px
    flex-direction: column
    > h1 
        color #555555
        text-align: center
        max-width 250px
        margin auto
        &:after
            content ''
            margin-top 5px
            height 3px
            width 100%
            background linear-gradient(to right, #f7cf67, #fca482)
            display block
    .separator
        overflow auto
        margin-top 30px
        .recent-item
            column(1/2)
            height 300px
            box-shadow: 0px 1px 2px 0px #888888
            border-radius: 7px
            overflow: hidden
            position relative
            cursor pointer
            img 
                width 110%
            .description
                position absolute
                bottom 0
                background rgba(25,98,127,0.5)
                overflow auto
                left 0
                right 0
                height 60px
                display flex
                align-items: center
                padding-left 20px
                h2
                    color #FFFFFF
            &:hover
                &:after
                    @extend .overlay
                    
