@import 'jeet'
@import 'font-awesome/css/fontawesome-all.css'
$innerWidth=1080px
// debug()

body, *
    margin 0
    padding 0

body.modal-open
    overflow: hidden

header 
    height 300px
    display flex
    flex-direction column
    overflow auto
    position absolute
    top 0
    left 0
    right 0
    img.logo 
        width 150px
    
.nav-wrapper
    z-index 1
    margin-left auto
    margin-right auto
    margin-top 10px
    width $innerWidth
    display flex 
    justify-content space-between
    align-items: center
    box-sizing: border-box

.logo-wrapper
    diplay flex 

navigation
    display flex
    ul 
        display flex 
        list-style: none
        li
            display flex 
            a 
                display block 
                text-decoration none 
                color #FFFFFF
                padding 10px
                margin-right 5px
    toggle
        display none
        flex-direction: column
        cursor pointer
        align-items: center
        justify-content: center
        .line 
            height 4px
            width 20px
            background #FFFFFF
            margin-bottom 5px
            &:last-child
                margin-bottom 0
content 
    position relative
    display flex
    flex 1
    min-height: 500px
    width 100%
    margin-top 250px
    .content-wrapper
        margin auto
        width: $innerWidth
        padding-bottom 50px

footer 
    display flex
    justify-content: center
    align-items: center
    background: linear-gradient(to right, #f7cf67, #fca482)
    height 80px
    color #515151
    font-weight: bold

@import 'content.styl'      
@import 'picker.styl'
@import 'modal.styl'
@import 'slider.styl'

