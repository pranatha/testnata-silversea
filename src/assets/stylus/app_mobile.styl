@import 'jeet'

+below(1078px)
    .nav-wrapper
        width 700px
    content .content-wrapper
        width 700px

+below(720px)
    header 
        height 230px

+below(700px)
    header 
        height 200px
    .nav-wrapper
        width 100%
        padding-left 20px
        padding-right 20px
        z-index 100
    content .content-wrapper
        width 100%
    navigation 
        ul
            display none
            li a
                font-size 25px
                margin-bottom 20px
            &.active
                display flex
                flex-direction: column
                position fixed
                top 0
                bottom 0
                left 0
                right 0
                background rgba(0,0,0,0.9)
                z-index: 11
                justify-content: center
                align-items: center
        toggle
            display flex
            z-index: 12
            .line
                transition 0.2s all 
                &.active
                    &:first-child
                        transform rotate(45deg) translateY(7px) translateX(5px)
                    &:last-child
                        transform rotate(-45deg) translateY(-2px) translateX(-1px)

+below(414px)
    header img.logo 
        width 100px