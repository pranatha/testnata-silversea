@import 'jeet'

.fade 
  -webkit-animation-name fade
  -webkit-animation-duration 1.5s
  animation-name fade
  animation-duration 1s

@-webkit-keyframes fade {
  from {opacity: .4} 
  to {opacity: 1}
}

@keyframes fade {
  from {opacity: .4} 
  to {opacity: 1}
}

.slider-wrapper
    position absolute
    top 0
    left 0
    right 0
    overflow hidden
    bottom 0
    &:after 
        content ''
        display block
        position absolute
        top 0
        bottom 0
        right 0
        left 0
        background rgba(0,0,0,0.5)
    

.slide-item
    display none
    align-items: center
    justify-content: center 
    position relative
    height 100%
    &.active
        display flex
    img.slider-img
        width 120%
        position absolute
    .info
        z-index: 1
        display flex
        flex-direction: column
        justify-content: center
        align-items: center
        position relative
        h1 
            color #FFFFFF
            margin-bottom 20px
        button 
            outline: none
            margin-bottom 30px
            background linear-gradient(to right, #f7cf67, #fca482)
            border-radius: 15px
            border none
            padding 5px 15px
            color #ffffff
            font-weight: bold
            font-size 15px
            &:hover
                cursor pointer
            &:active
                background: linear-gradient(to right, darken(#f7cf67,10%), darken(#fca482, 10%))

.bullet-wrapper
    center(max-width=200px)
    display flex
    position absolute
    bottom 60px
    left 0
    right 0
    margin auto
    justify-content: center
    z-index: 10
    &.product
        bottom 10px
    .bullet
        width 10px
        height 10px
        background rgba(255,255,255,0.5)
        margin-right 5px
        border-radius: 50%
        &:last-child
            margin-right 0
        &.active
            background #fab876


.slider-nav
    position absolute
    z-index: 10
    top 0
    bottom 0
    right 0
    left 0
    // background #FFFFFF
    display: flex
    justify-content: space-between
    align-items: center
    .nav
        display: flex
        background: rgba(0,0,0,0.5)
        padding 10px
        cursor pointer
        &:hover
            background: rgba(0,0,0,0.7)
        > i 
            font-size 25px
            color #f5f5f5
